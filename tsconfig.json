{
    "extends": "@tsconfig/node18/tsconfig.json",
    "include": ["/**/*.ts", "*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "target": "es2022",
      "module": "es2022", // or "es2020", "es2022", etc.
      "outDir": "dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true
    }
  }
  